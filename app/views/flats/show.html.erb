<div class="container">
  <div class="card mt-5 mb-5 p-3">
    <h1><%= @flat.name %></h1>
    <p><%= @flat.address %></p>
  </div>

  <div class="card mb-5 p-3">
    <h2>A bit more about this flat...</h2>
    <%= @flat.description %>
  </div>

  <div class="card p-3">
    <h2>Details</h2>
    <div class="d-flex">
      <div class="people mr-3"><i class="material-icons">people</i> <%= @flat.number_of_guests %></div>
      <div class="price"><i class="material-icons">euro_symbol</i> <%= @flat.price_per_night %></div>
    </div>
  </div>
</div>
